class Ground {
    field int y; // Position of the ground

    constructor Ground new(int Ay) {
        let y = Ay;
        return this;
    }


    method int groundPosition(){
        return y;
    }

    method void drawGround(){
        do Screen.setColor(true);
        do Screen.drawRectangle(0, y, 511, 255);
        return;
    }

}
